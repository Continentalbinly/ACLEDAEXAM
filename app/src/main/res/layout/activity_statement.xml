<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatementActivity">

    <!-- Add a Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/Theme.ACLEDAEXAM.PopupOverlay"
        tools:ignore="MissingConstraints" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#fff"
            android:text="ປະຫວັດການເຄື່່່່ອນໄຫວ"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/minilogo"
            android:layout_gravity="end"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:id="@+id/toplinear"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:background="#222"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAK 245487-10"
            android:textColor="#FFC900"
            android:textSize="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ບັນຊີຝາກປະຢັດ"
            android:textColor="#FFC900"
            android:textSize="18dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/toplinear">

        <!-- First set of TextView, ImageView, and extraTextView -->
        <TextView
            android:layout_width="288dp"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="9 ພະຈິກ 2023"
            android:textColor="#1c3352"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:background="@drawable/shadow"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="TODO"
                    android:src="@drawable/icons8correct30" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/imageView"
                    android:text="ໄດ້ຮັບເງິນໂອນ"
                    android:textColor="#1c3352"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/extraTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="135dp"
                    android:layout_toEndOf="@id/textView"
                    android:text="9,999,999 ກີບ"
                    android:textColor="#1c3352"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <!-- Second set of ImageView and TextView elements -->

        <TextView
            android:layout_width="288dp"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:text="4 ພະຈິກ 2023"
            android:textColor="#1c3352"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:background="@drawable/shadow"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="TODO"
                    android:src="@drawable/icons8wrong30" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/imageView2"
                    android:text="ຈ່າຍຄ່າອາຫານ"
                    android:textColor="#1c3352"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/extraTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="142dp"
                    android:layout_toEndOf="@id/textView2"
                    android:text="242,544 ກີບ"
                    android:textColor="#1c3352"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
